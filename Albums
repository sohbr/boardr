      create  app/controllers/api_controller.rb
       route  get 'api/destroy'
       route  get 'api/update'
       route  get 'api/create'
       route  get 'api/show'
       route  get 'api/index'
      invoke  erb
       exist    app/views/api
      create    app/views/api/index.html.erb
      create    app/views/api/show.html.erb
      create    app/views/api/create.html.erb
      create    app/views/api/update.html.erb
